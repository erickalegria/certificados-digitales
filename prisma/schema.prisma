generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Certificate {
  id          String   @id @default(cuid())
  dni         String   // Removido @unique
  fullName    String
  course      String
  company     String
  issueDate   DateTime
  expiryDate  DateTime
  pdfUrl      String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([dni, course])
  @@map("certificates")
}

enum Role {
  USER
  ADMIN
}